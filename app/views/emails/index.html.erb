<script>
  function toggleSidebar() {
    const sidebar = document.querySelector('#sidebar');
    sidebar.classList.toggle('-translate-x-full');
  }

  function showEmail(emailId) {
    Turbo.visit(`?selected_email_id=${emailId}`, { frame: "email_view" });
    if (window.innerWidth < 768) {
      document.querySelector('#emailList').style.display = 'none';
    }
  }

  function backToList() {
    Turbo.visit(window.location.pathname, { frame: "email_view" });
    if (window.innerWidth < 768) {
      document.querySelector('#emailList').style.display = 'block';
    }
  }
</script>

<div class="h-screen flex flex-col bg-gray-50">
  <!-- Header -->
  <header class="h-16 bg-white border-b border-gray-200 flex items-center px-4 sticky top-0 z-10">
    <div class="flex items-center gap-4">
      <button onclick="toggleSidebar()" class="lg:hidden p-2 rounded-md hover:bg-gray-100">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
      </button>
      
      <div class="flex items-center">
        <svg class="h-8 w-8 text-blue-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 7L12 2L2 7V17L12 22L22 17V7Z"/>
          <path d="M2 7L12 12L22 7"/>
          <path d="M12 22V12"/>
        </svg>
        <h1 class="text-xl font-bold text-gray-900 ml-2">Cryptokey</h1>
      </div>
    </div>
    
    <div class="mx-4 flex-1 max-w-2xl relative hidden md:block">
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
        </div>
        <input
          type="text"
          placeholder="Search emails..."
          class="block w-full pl-10 pr-4 py-2 border rounded-md bg-gray-50 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
        />
      </div>
    </div>
    
    <div class="flex items-center ml-auto">
      <button class="p-2 relative text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-full">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/><path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"/></svg>
        <span class="absolute top-1 right-1 w-2 h-2 rounded-full bg-red-500"></span>
      </button>
      
      <div class="ml-4">
        <div class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center">
          <span class="font-medium text-blue-800">JD</span>
        </div>
      </div>
    </div>
  </header>

  <div class="flex-1 flex overflow-hidden">
    <!-- Sidebar -->
    <aside id="sidebar" class="fixed inset-y-16 left-0 z-20 w-64 lg:relative lg:inset-y-auto transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out bg-white border-r border-gray-200 h-full overflow-auto flex flex-col">
      <div class="p-4">
        <%= link_to new_email_path, class: "w-full bg-blue-600 text-white px-6 py-3 rounded-md font-medium flex items-center justify-center gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 5v14M5 12h14"/></svg>
          Compose
        <% end %>
      </div>
      
      <nav class="flex-1">
        <ul>
          <li>
            <button class="flex items-center justify-between w-full px-4 py-2.5 text-sm bg-blue-50 text-blue-600 font-medium">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-3 text-blue-600"><path d="M22 12h-6l-2 3h-4l-2-3H2"/><path d="M5.45 5.11 2 12v6a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-6l-3.45-6.89A2 2 0 0 0 16.76 4H7.24a2 2 0 0 0-1.79 1.11z"/></svg>
                Inbox
              </div>
              <span class="bg-blue-600 text-white text-xs font-medium px-2 py-0.5 rounded-full"><%= @emails.size %></span>
            </button>
          </li>
        </ul>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="grid md:grid-cols-2 h-screen w-full">
      <%= render partial: "email_list", locals: { emails: @emails } %>
      <turbo-frame id="email_view">
        <%= render partial: "email_view", locals: { selected_email: @emails.find_by(id: params[:selected_email_id]) } %>
      </turbo-frame>
    </main>
  </div>
</div>