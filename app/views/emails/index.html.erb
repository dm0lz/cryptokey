<script>
  function toggleSidebar() {
    const sidebar = document.querySelector('#sidebar');
    sidebar.classList.toggle('-translate-x-full');
  }

  function showEmail(emailId) {
    Turbo.visit(`?selected_email_id=${emailId}`, { frame: "email_view" });
    if (window.innerWidth < 768) {
      document.querySelector('#emailList').style.display = 'none';
    }
  }

  function backToList() {
    document.querySelector('#email_view').innerHTML = "";
    Turbo.visit(window.location.pathname, { 
      frame: "email_view",
      action: "replace"
    });
    if (window.innerWidth < 768) {
      document.querySelector('#emailList').style.display = 'block';
    }
  }
</script>

<div class="h-screen flex flex-col bg-gray-50">
  <!-- Header -->
  <header class="h-16 bg-white border-b border-gray-200 flex items-center px-4 sticky top-0 z-10">
    <div class="flex items-center gap-4">
      <button onclick="toggleSidebar()" class="lg:hidden p-2 rounded-md hover:bg-gray-100">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
      </button>
    </div>
    
    <div class="flex-1 max-w-2xl relative hidden md:block">
      <%= form_with url: emails_path, method: :get, local: true do %>
        <div class="flex w-full shadow-sm border border-gray-300 rounded-lg focus-within:ring-2 focus-within:ring-indigo-500 focus-within:border-indigo-500 bg-white">
          <div class="relative flex items-center flex-1">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="11" cy="11" r="8"/><path d="M21 21l-4.35-4.35"/></svg>
            </span>
            <input type="text" name="q" value="<%= params[:q] %>" placeholder="Search emails..." class="w-full pl-10 pr-2 py-2 bg-transparent border-none rounded-l-lg focus:outline-none text-sm" />
          </div>
          <% if params[:q].present? %>
            <button type="button" onclick="this.form.q.value=''; this.form.submit();" class="flex items-center justify-center px-3 pt-2.5 h-full text-gray-400 hover:text-gray-600 focus:outline-none bg-transparent border-none rounded-r-lg">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="flex items-center ml-auto">
      <div class="ml-4">
        <div class="">
          <% if Current.user %>
            <div x-data="{ open: false }" class="relative">
              <button
                @click="open = !open"
                class="flex items-center space-x-2 bg-indigo-50 px-3 py-1.5 rounded-full focus:outline-none focus:ring-2 focus:ring-indigo-400 transition cursor-pointer"
                aria-haspopup="true"
                :aria-expanded="open"
              >
                <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-indigo-200 text-indigo-700 font-bold text-sm">
                  <%= Current.user.email_address[0].upcase %>
                </span>
                <span class="text-sm font-medium text-gray-800"><%= Current.user.email_address %></span>
                <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
              <div
                x-show="open"
                @click.away="open = false"
                class="absolute right-0 mt-2 w-40 bg-white rounded-lg shadow-lg py-2 z-50 border border-gray-100"
                x-transition
              >
                <%= link_to "Account", account_edit_path, class: "block px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 text-sm font-medium" %>
                <%= button_to "Sign Out", session_path, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, class: "w-full text-left px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 text-sm font-medium bg-transparent border-0 cursor-pointer" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <div class="flex-1 flex overflow-hidden">
    <!-- Sidebar -->
    <aside id="sidebar" class="fixed inset-y-16 left-0 z-20 w-64 lg:relative lg:inset-y-auto transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out bg-white border-r border-gray-200 h-full overflow-auto flex flex-col">
      <div class="p-4">
        <%= link_to new_email_path, class: "w-full bg-blue-600 text-white px-6 py-3 rounded-md font-medium flex items-center justify-center gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 5v14M5 12h14"/></svg>
          Compose
        <% end %>
      </div>
      
      <nav class="flex-1">
        <ul>
          <li>
            <button class="flex items-center justify-between w-full px-4 py-2.5 text-sm bg-blue-50 text-blue-600 font-medium">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-3 text-blue-600"><path d="M22 12h-6l-2 3h-4l-2-3H2"/><path d="M5.45 5.11 2 12v6a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-6l-3.45-6.89A2 2 0 0 0 16.76 4H7.24a2 2 0 0 0-1.79 1.11z"/></svg>
                Inbox
              </div>
              <span class="bg-blue-600 text-white text-xs font-medium px-2 py-0.5 rounded-full"><%= @emails.size %></span>
            </button>
          </li>
        </ul>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="grid md:grid-cols-2 h-screen w-full">
      <%= render partial: "email_list", locals: { emails: @emails } %>
      <%= render partial: "email_view", locals: { selected_email: @emails.find_by(id: params[:selected_email_id]) } %>
    </main>
  </div>
</div>