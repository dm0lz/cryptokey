<% content_for :title, "Create an account" %>

<div class="min-h-screen flex flex-col justify-center items-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Create your account</h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Already have an account?
        <%= link_to "Sign in", new_session_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </p>
    </div>
    <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
      <% if flash[:alert] %>
        <div class="mb-4 bg-red-50 border-l-4 border-red-400 p-4 text-red-700 text-sm rounded">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <% if flash[:notice] %>
        <div class="mb-4 bg-green-50 border-l-4 border-green-400 p-4 text-green-700 text-sm rounded">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <%= form_with model: @user, url: registration_path, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email_address, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email",
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                placeholder: "yourname@cryptokey.email", pattern: ".+@cryptokey\\.email" %>
            <p class="mt-2 text-xs text-gray-500">Email must end with <span class="font-semibold">@cryptokey.email</span></p>
          </div>
        </div>
        <div>
          <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.password_field :password, required: true, autocomplete: "new-password", maxlength: 72,
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                placeholder: "Choose a password" %>
            <p class="mt-2 text-xs text-gray-500">Must be at least 8 characters.</p>
          </div>
        </div>
        <div>
          <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", maxlength: 72,
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                placeholder: "Confirm your password" %>
          </div>
        </div>
        <div>
          <%= form.submit "Create account",
              class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-semibold text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition" %>
        </div>
      <% end %>
      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Or</span>
          </div>
        </div>
        <div class="mt-6 text-center">
          <%= link_to "Back to home", root_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>
    </div>
  </div>
</div> 